{
	"name": "internet-web-site",
	"version": "1.0.0",
	"scripts": {
		"start": "npm run watch",
		"build": "npm-run-all build:sass build:css build:11ty",
		"build:11ty": "npx eleventy",
		"build:sass": "sass --load-path=node_modules src/themes:src/css",
		"build:css": "postcss src/css/*.css --dir dist/css --map --use autoprefixer cssnano",
		"watch": "npm-run-all --parallel watch:sass watch:css watch:11ty",
		"watch:11ty": "npx eleventy --serve",
		"watch:sass": "sass --load-path=node_modules --watch src/themes:src/css",
		"watch:css": "postcss src/css/*.css --dir dist/css --watch --map --use autoprefixer cssnano",
		"debug:11ty": "DEBUG=* npx eleventy"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cbirdsong/internet-web-site"
	},
	"author": {
		"name": "Cory Birdsong",
		"email": "cory@birdsong.dev",
		"url": "https://birdsong.dev/"
	},
	"bugs": {
		"url": "https://github.com/cbirdsong/internet-web-site/issues"
	},
	"homepage": "https://github.com/cbirdsong/internet-web-site",
	"dependencies": {
		"@11ty/eleventy": "^1.0.0",
		"@11ty/eleventy-navigation": "^0.3.2",
		"@11ty/eleventy-plugin-rss": "^1.1.2",
		"@fontsource/jost": "^4.5.1",
		"autoprefixer": "^10.4.2",
		"clean-css": "^5.2.2",
		"cssnano": "^5.0.15",
		"luxon": "^2.3.0",
		"markdown-it": "^12.3.2",
		"markdown-it-anchor": "^8.4.1",
		"normalize.css": "^8.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.5",
		"postcss-cli": "^9.1.0",
		"prettier": "^2.5.1",
		"sass": "^1.48.0"
	}
}