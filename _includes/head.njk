<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

{%- set titleTag -%}{% if title or renderData.title %}{{ title or renderData.title }}{{ metadata.title_separator }}{% endif %}{{ metadata.title }}{%- endset -%}
<title>{{ titleTag | markdown | striptags }}</title>

<script type="module">
  document.documentElement.classList.remove('no-js');
  document.documentElement.classList.add('js');
</script>

<link rel="canonical" href="{{ page.url | url | absoluteUrl(metadata.url) }}">

