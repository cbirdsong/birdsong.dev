<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

{%- set titleTag -%}{% if title or renderData.title %}{{ title or renderData.title }} &bull; {% endif %}{{ metadata.title }}{%- endset -%}
<title>{{ titleTag | markdown | striptags }}</title>

<script type="module">
  document.documentElement.classList.remove('no-js');
  document.documentElement.classList.add('js');
</script>

<link rel="canonical" href="{{ page.url | url | absoluteUrl(metadata.url) }}">

{% set css %}
{% include "src/css/base.css" %}
{% endset %}
<style id="base-css" media="all">
  {{ css | cssmin | safe }}
</style>

<link id="theme-css" rel="stylesheet" href="/css/1977.css" media="screen" as="style"/>
<link id="print-css" rel="stylesheet" href="/css/print.css" media="print" as="style"/>

{%- if description -%}<meta name="description" content="{{ description | markdown | striptags }}">{%- endif -%}

{%- if robots %}<meta name="robots" content="{{ robots }}">{%- endif -%}

<link rel="alternate" type="application/rss+xml" title="{{ metadata.title }} &bull; Blog" href="/posts.xml"/>

<link rel="icon" type="image/svg+xml" href="/favicon.svg">
<link rel="alternate icon" type="image/png" sizes="512x512" href="/favicon.png">
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

<meta name="generator" content="{{ eleventy.generator }}">