<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or renderData.title or metadata.title }}
				&bull;
				{{ metadata.title }}</title>

		{% if description %}
				<meta name="description" content="{{description}}">
		{% endif %}

		{% if robots %}
				<meta name="robots" content="{{robots}}">
		{% endif %}

		{% set css %}
		{% include "assets/css/base.css" %}
		{% endset %}
		<style>
				{{css | cssmin | safe}}
		</style>

		{% block fonts %}
				{% include "components/fonts.njk" %}
		{% endblock %}
</head>